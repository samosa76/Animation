<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uus.osa.sam.adahealthy.Fragment.QuestionFragment1">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/BacktoIF2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_blur"
            android:text="Submit"
            android:textColor="#ddaeb0b1" />

        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnyes1"
            android:layout_marginBottom="10dp"
            android:text="ini contoh text yang seharusnya di buat"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnyes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnmaybe1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Yes" />

        <Button
            android:id="@+id/btnmaybe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnno1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="maybe" />

        <Button
            android:id="@+id/btnno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="No" />

    </RelativeLayout>
</FrameLayout>
